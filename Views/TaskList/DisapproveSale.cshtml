@{
    Layout = null;
}
<div class="row">
    <h5 class="col-sm-offset-3">If Memo Disapproved</h5>
    @using (Html.BeginForm("DisapproveSale", "TaskList", new { @id = ViewData["SaleId"].ToString() }, FormMethod.Post, new { @id = "form-disapprove-sale" }))
    {
        <div class="form-group">
            @Html.Label("Reason:", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.DropDownList("Reason", (SelectList)ViewData["ReasonDropdown"], new { @class = "form-control" })
                @Html.ValidationMessage("Reason")
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Remarks:", new { @class = "col-sm-3 control-label" })
            <div class="col-sm-8">
                @Html.TextArea("Remarks", new { @class = "form-control" })
                @Html.ValidationMessage("Remarks")
            </div>
        </div>
    }
    <div class="col-sm-12" style="text-align: center;">
        <button class="btn btn-primary btn-outline" type="button" onclick="SubmitForm('form-disapprove-sale')">Update</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#update-sale-memoid").html("Update Sales Record - " + "@ViewData["MemoID"].ToString()");
    })
</script>