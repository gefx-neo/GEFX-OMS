@using DataAccess.POCO

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = ViewData["SiteName"].ToString();
	ViewBag.PageTitle = "Payment Mode Settings";
	ViewBag.Settings = "active open";
	ViewBag.PaymentModeSettings = "active";
}

<div class="panel">
	<div class="panel-body container-fluid">
		<div class="row row-lg">
			<div class="col-xlg-12 col-md-12">

				@if (TempData["Result"] != null)
				{
					string[] result = TempData["Result"].ToString().Split('|');

					<div class="alert alert-@result[0]">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						@result[1]
					</div>
				}
				@{
					List<PaymentModeLists> list = (List<PaymentModeLists>)ViewData["PaymentModeSetting"];
					if (list.Count > 0)
					{
						using (Html.BeginForm("Edit", "PaymentModeSetting", FormMethod.Post, new { @class = "form-horizontal", @id = "form-edit" }))
						{
							Html.AntiForgeryToken();
							foreach (PaymentModeLists _list in list)
							{
								<div class="form-group">
									@Html.LabelFor(u => _list.Name, new { @class = "col-sm-2 control-label" })
									<div class="col-sm-10">
										@Html.TextBoxFor(u => _list.Name, new { @class = "form-control", @placeholder = "Payment Mode Name", @disabled = "disabled" })
										<input hidden value="@_list.Name" id="Name_@_list.ID" name="Name_@_list.ID"/>
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(u => _list.InstructionText, new { @class = "col-sm-2 control-label" })
									<div class="col-sm-10">
										@Html.TextArea("InstructionText_" + _list.ID, _list.InstructionText, new { @class = "form-control", @placeholder = "Instruction Text", @id = "InstructionText_" + _list.ID })
										@Html.ValidationMessage("InstructionText_" + _list.ID)
									</div>
									<script>
									CKEDITOR.replace("InstructionText_" + @_list.ID);
									</script>
								</div>
							}

							<div class="form-group">
								<div class="col-sm-9 col-sm-offset-2">
									<button type="submit" class="btn btn-primary" id="disable_button">Save</button>
								</div>
							</div>
						}
					}
				}
			</div>
		</div>
	</div>
</div>